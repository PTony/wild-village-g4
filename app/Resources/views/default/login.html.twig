{% extends "base.html.twig" %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">

{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

<div class="row">
	<div class="col-md-4 col-md-offset-4 ">
	{% if error %}
		<div class="row">
    		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    	</div>
	{% endif %}

		<div class="row">
			<div class="col-md-12">
				<p><a href="./">accueil</a></p>
			</div>
		</div>
		<div class="row login">
			<div class="col-md-12 ">
				<form action="{{ path("fos_user_security_check") }}" method="post">

					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<div class="row">
						<div class="col-md-12 text-center">
							<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-center">
							<input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}"  />
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-center">
							<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
							<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-center">
							<input class="btn-style" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-center">
							<p>Pas encore de compte? <a href="{{path('user_register')}}">S'enregistrer</a></p>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock body %}
