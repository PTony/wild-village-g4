{% extends 'base.html.twig' %}
{% block body %}
	<h2 class="titre-fil-actu">Fil d'actualit√©s</h2>
	{% for onePost in tabpost %}
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8 accueil-post">
				<div class="row post-infos">
					<div class="col-md-1">
						{{ onePost['idpost'] }}
					</div>
					<div class="col-md-9">
						Auteur :
						<a href="{{ path("other_profil", {'id':onePost['iduser']}) }}"> {{ onePost['auteur'] }}</a>
					</div>
					<div class="col-md-2">
						{{ onePost['date'].date }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 post-content">
						{{ onePost['content'] }}
					</div>
				</div>
			</div>
			<div class="col-md-2"></div>
		</div>
	{% endfor %}
{% endblock %}